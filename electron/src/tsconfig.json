{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "../..",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "outDir": "../dist/",
    "paths": {
      "@/*": ["../assets/*"]
    }
  },
  "include": ["./**/*.ts", "./tests/**/*.ts", "./tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
